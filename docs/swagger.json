{
    "swagger": "2.0",
    "info": {
        "contact": {}
    },
    "paths": {
        "/send-otp": {
            "post": {
                "description": "این متد شماره موبایل کاربر را می‌گیرد و کد OTP تولید می‌کند",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Auth"
                ],
                "summary": "ارسال کد OTP",
                "parameters": [
                    {
                        "description": "شماره موبایل",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/handler.PhoneRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "کد OTP ارسال شد",
                        "schema": {
                            "$ref": "#/definitions/handler.Response"
                        }
                    },
                    "400": {
                        "description": "درخواست نامعتبر",
                        "schema": {
                            "$ref": "#/definitions/handler.Response"
                        }
                    },
                    "500": {
                        "description": "خطا در ارسال OTP",
                        "schema": {
                            "$ref": "#/definitions/handler.Response"
                        }
                    }
                }
            }
        },
        "/user/{phone}": {
            "get": {
                "description": "با استفاده از شماره تلفن، جزئیات کاربر را دریافت می‌کند",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Users"
                ],
                "summary": "دریافت جزئیات یک کاربر",
                "parameters": [
                    {
                        "type": "string",
                        "description": "شماره تلفن کاربر",
                        "name": "phone",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "404": {
                        "description": "کاربر یافت نشد",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "خطا در دریافت کاربر",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/users": {
            "get": {
                "description": "دریافت لیست کاربران با قابلیت جستجو و صفحه‌بندی",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Users"
                ],
                "summary": "دریافت لیست کاربران",
                "parameters": [
                    {
                        "type": "string",
                        "description": "جستجو بر اساس شماره تلفن یا سایر فیلدها",
                        "name": "search",
                        "in": "query"
                    },
                    {
                        "type": "integer",
                        "description": "شماره صفحه",
                        "name": "page",
                        "in": "query"
                    },
                    {
                        "type": "integer",
                        "description": "تعداد نتایج در هر صفحه",
                        "name": "limit",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "خطا در دریافت لیست کاربران",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/verify-otp": {
            "post": {
                "description": "این متد شماره موبایل و کد OTP را گرفته و در صورت صحت، JWT تولید می‌کند و در کوکی ذخیره می‌کند",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Auth"
                ],
                "summary": "تایید کد OTP",
                "parameters": [
                    {
                        "description": "شماره موبایل و OTP",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/handler.VerifyOTPRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "JWT تولید شد و در کوکی ذخیره شد",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "درخواست نامعتبر",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "401": {
                        "description": "OTP نادرست یا منقضی شده",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "خطا در تولید توکن",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "handler.PhoneRequest": {
            "type": "object",
            "properties": {
                "phone": {
                    "type": "string"
                }
            }
        },
        "handler.Response": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string"
                },
                "valid": {
                    "type": "boolean"
                }
            }
        },
        "handler.VerifyOTPRequest": {
            "type": "object",
            "properties": {
                "otp": {
                    "type": "string"
                },
                "phone": {
                    "type": "string"
                }
            }
        }
    }
}